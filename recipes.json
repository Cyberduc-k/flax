{
    "check": {
        "cmd": "cargo check --tests --examples"
    },
    "build": {
        "cmd": "cargo build --examples"
    },
    "mdbook-build": {
        "cmd": "mdbook build",
        "interactive": false,
        "cwd": "guide"
    },
    "mdbook-serve": {
        "cmd": "mdbook serve",
        "interactive": false,
        "cwd": "guide"
    },
    "example-guide": {
        "cmd": "cargo run --example guide",
        "kind": "term",
        "keep_open": true
    },
    "example-query": {
        "cmd": "cargo run --example query",
        "keep_open": true,
        "term": {
            "focus": false
        },
        "kind": "term"
    }
}
